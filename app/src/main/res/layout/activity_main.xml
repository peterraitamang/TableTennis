<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="#DAEDDB">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="SCOREBOARD"
        android:textColor="#3F51B5"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/cardview_container"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txt_title_score"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="10dp"
            android:elevation="20dp"
            app:cardUseCompatPadding="true"
            android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/txt_score_player1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="10dp"
            android:elevation="20dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/txt_score_player2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:backgroundTint="#3F51B5"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardview_container"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:backgroundTint="#E91E63"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardview_container"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/play_status_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_player1"
        app:layout_constraintStart_toStartOf="parent">
    <TextView
        android:id="@+id/txt_title_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textSize="20dp"
        android:textColor="@color/purple_500"/>
    <TextView
        android:id="@+id/play_status"
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duse ball"
        android:textSize="20dp"
        android:textColor="#FF5722"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_container_winner_status"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/play_status_title"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        android:elevation="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Winner:"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:id="@+id/txt_title_winner"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/txt_winner_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:layout_toRightOf="@id/txt_title_winner"
                    android:textSize="40dp"
                    android:textColor="#4CAF50"/>
            </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_container_winner_status"
        android:gravity="center">

    <TextView
        android:id="@+id/tv_player_lose_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2 "
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tv_player_lose_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardview_container_winner_status"
        app:layout_constraintStart_toEndOf="@id/tv_player_lose_status"
        android:text=" lost."
        android:textColor="#FF0000"
        android:textSize="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>